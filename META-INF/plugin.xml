<!DOCTYPE idea-plugin PUBLIC "Plugin/DTD"
        "http://plugins.intellij.net/plugin.dtd">
<idea-plugin>

    <name>Useful actions</name>
    <id>UsefulActions</id>
    <version>2.2</version>

    <description><![CDATA[
         Contains following actions: 
         <br>- Quick switch for turning on/off proxy
         <br>- Build and install plugin action
          ]]>
    </description>

    <category>Misc</category>

    <vendor url="https://github.com/krasa/UsefulActions" email="vojta.krasa@gmail.com">Vojtech Krasa</vendor>
    <depends optional="false">DevKit</depends>

    <idea-version since-build="182" until-build=""/>
    <change-notes><![CDATA[

            ]]></change-notes>

    <actions>
        <action id="ChangeProxyAction" class="krasa.usefulactions.ChangeProxyAction"
                text="Turn on/off proxy settings" description="Turn on/off proxy settings">
            <add-to-group group-id="ChangeScheme" anchor="last"/>
        </action>
        <group id="krasa.PluginDeployActions">
            <action class="krasa.usefulactions.PrepareToDeployAction" id="krasa.MakeJarAction" text="MakeJarAction">
            </action>
            <action class="krasa.usefulactions.PrepareAllToDeployAction" id="krasa.PrepareAllToDeployAction"
                    text="Release and install all">
            </action>
            <add-to-group anchor="after" group-id="ProjectViewPopupMenu" relative-to-action="Compile"/>
            <add-to-group anchor="after" group-id="BuildMenu" relative-to-action="BuildArtifact"/>
        </group>
    </actions>


    <extensions defaultExtensionNs="com.intellij">
    </extensions>
    <application-components>
        <component>
            <implementation-class>krasa.usefulactions.plugin.UsefulActionsApplicationComponent</implementation-class>
        </component>
    </application-components>

</idea-plugin>